<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">
  <changeSet id="create users table" author="kmclarnon">
    <createTable tableName="users">
      <column name="id" autoIncrement="true" type="INT">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="email" type="VARCHAR(255)"/>
      <column name="password_hash" type="CHAR(64)">
        <constraints nullable="false"/>
      </column>
      <column name="elo" type="INT">
        <constraints nullable="false"/>
      </column>
      <column name="created_at" type="BIGINT UNSIGNED">
        <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet>
  <changeSet id="add users columns" author="nrattner">
    <addColumn tableName="users">
      <column name="username" type="VARCHAR(255)">
        <constraints nullable="false"/>
      </column>
    </addColumn>
    <addColumn tableName="users">
      <column name="password_salt" type="CHAR(10)">
        <constraints nullable="false"/>
      </column>
    </addColumn>
  </changeSet>
  <changeSet id="create secrets table" author="nrattner">
    <createTable tableName="secrets">
      <column name="cookie_key" type="CHAR(32)">
        <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet>
  <changeSet id="add matches table" author="kmclarnon">
    <createTable tableName="matches">
      <column name="id" autoIncrement="true" type="INT">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="player_1" type="INT">
        <constraints nullable="false" foreignKeyName="fk_users_id" references="users(id)"/>
      </column>
      <column name="player_2" type="INT">
        <constraints nullable="false" foreignKeyName="fk_users_id" references="users(id)"/>
      </column>
      <column name="result" type="INT">
        <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet>
  <changeSet id="update elo column" author="kmclarnon">
    <modifyDataType tableName="users" columnName="elo" newDataType="DECIMAL(18,9)"/>
  </changeSet>
</databaseChangeLog>
